  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.0.2",
    "typescript": "^5.9.2",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.2.0",
    "@typescript-eslint/parser": "^8.42.0",
