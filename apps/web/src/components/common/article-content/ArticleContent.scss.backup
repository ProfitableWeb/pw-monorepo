/**
 * Article Content - стили для HTML контента
 * 
 * Базовые стили типографики для всех HTML элементов.
 * Адаптивность и брейкпоинты вынесены в отдельный файл _responsive.scss
 */

.article-content {
  // Базовая типографика (размер и line-height в _responsive.scss)
  color: var(--color-text-primary);

  // Заголовки
  h1, h2, h3, h4, h5, h6 {
    line-height: 1.2;
    font-weight: 700;
    color: var(--color-text-primary);
  }

  h1 {
    font-size: 2.25em;
    line-height: 1.15;
  }

  h2 {
    font-size: 1.75em;
    line-height: 1.2;
    padding-bottom: 0.3em;
    border-bottom: 1px solid var(--color-border);
  }

  h3 {
    font-size: 1.5em;
    line-height: 1.25;
  }

  h4 {
    font-size: 1.25em;
    line-height: 1.3;
  }

  h5 {
    font-size: 1.1em;
    line-height: 1.3;
  }

  h6 {
    font-size: 1em;
    line-height: 1.3;
  }

  // Параграфы
  p {
    max-width: 75ch; // Оптимальная ширина строки для читабельности (65-75 символов)
    
    &:last-child {
      margin-bottom: 0;
    }
  }

  // Lead paragraph - первый параграф (вводный)
  // НЕ применяется к параграфам внутри blockquote, ul, ol
  > section > p:first-of-type,
  > p:first-of-type {
    color: var(--color-text-primary);
  }

  // Класс для явного указания lead paragraph
  .lead {
    color: var(--color-text-primary);
    max-width: 75ch;
  }

  // Ссылки
  a {
    color: var(--color-primary);
    text-decoration: none;
    border-bottom: 1px solid var(--color-primary);
    transition: color 0.2s, border-color 0.2s;

    &:hover {
      color: var(--color-primary-hover, var(--color-primary));
      border-bottom-color: var(--color-primary-hover, var(--color-primary));
    }
  }

  // Списки
  ul, ol {
    padding-left: 2em;
    max-width: 75ch; // Оптимальная ширина для читабельности

    li {
      margin-bottom: 0.5em;
    }

    // Вложенные списки
    ul, ol {
      margin-top: 0.5em;
      margin-bottom: 0.5em;
    }
  }

  ul {
    list-style-type: disc;
  }

  ol {
    list-style-type: decimal;
  }

  // Цитаты
  blockquote {
    padding: 1em 1.5em;
    border-left: 4px solid var(--color-border);
    background: var(--color-background-secondary, rgba(0, 0, 0, 0.05));
    font-style: normal;
    line-height: 1.5;
    color: var(--color-text-primary);

    p {
      margin-bottom: 1em;
      
      &:last-child {
        margin-bottom: 0;
      }
    }

    cite {
      display: block;
      margin-top: 1em;
      font-size: 0.9em;
      font-style: normal;
      color: var(--color-text-muted);
    }
  }

  // Код
  code {
    padding: 0.2em 0.4em;
    background: var(--color-background-secondary, rgba(0, 0, 0, 0.05));
    border-radius: 3px;
    font-family: 'Monaco', 'Courier New', monospace;
    font-size: 0.9em;
  }

  pre {
    padding: 1em 1.5em;
    background: var(--color-background-secondary, rgba(0, 0, 0, 0.05));
    border-radius: 6px;
    overflow-x: auto;

    code {
      padding: 0;
      background: none;
      border-radius: 0;
    }
  }

  // Изображения
  img {
    max-width: 100%;
    height: auto;
    display: block;
    border-radius: 6px;
  }

  // Таблицы
  table {
    width: 100%;
    border-collapse: collapse;
    overflow-x: auto;
    display: block;

    @media (min-width: 768px) {
      display: table;
    }
  }

  th, td {
    padding: 0.75em 1em;
    text-align: left;
    border-bottom: 1px solid var(--color-border);
  }

  th {
    font-weight: 700;
    background: var(--color-background-secondary, rgba(0, 0, 0, 0.05));
  }

  // Горизонтальная линия
  hr {
    border: none;
    border-top: 1px solid var(--color-border);
  }

  // Strong и Em
  strong {
    font-weight: 700;
  }

  em {
    font-style: italic;
  }

  // Секции
  section {
    &:last-child {
      margin-bottom: 0;
    }
  }
}

// Импортируем адаптивные настройки
@import './responsive-typography';  // Типографика: font-size, line-height
@import './responsive-spacing';     // Отступы: margin, padding